<!DOCTYPE html>
<html>
<head>
  <title>Bonnie</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <% if user_signed_in? %>
      <div id="bonnie"></div>
    <% else %>
      <%= yield %>
    <% end %>
    <%= render 'layouts/footer' %>
  </div>
  <%= javascript_include_tag "application" %>
  <script src="<%= libraries_measures_url format: :js %>" type="text/javascript"></script>
  <%# A page can have one measure or many; load each measure %>
  <% (@measures || Array(@measure)).each do |measure| %>
    <script src="<%= measure_url(measure, format: :js) %>" type="text/javascript"></script>
  <% end %>
  <% if @patient || @patients %>
    <script>
      bonnie.patients.add(<%= (@patients || Array(@patient)).to_json(except: :results).html_safe %>, { parse: true });
      <%# FIXME: re-consider approach to next two lines %>
      bonnie.sections = <%= Record::Sections.to_json().html_safe %>;
      bonnie.template_id_map = <%= JSON.parse(File.read(File.expand_path('../../../../lib/assets/hqmf_template_oid_map.json', __FILE__))).to_json().html_safe %> 
    </script>
  <% end %>
  <script>
    Backbone.history.start()
  </script>
</body>
</html>
